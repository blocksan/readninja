<md-content class=" blog--banner--content blog--no--content" style="background:#fff;" ng-if="!loaded">
    <md-progress-circular class="md-accent" md-mode="indeterminate"></md-progress-circular>
</md-content>
<md-content class="blog--banner--content blog--no--content" style="background:#fff;" ng-if="!content && loaded">
    <div layout="column">
        <h1>No Content Found !!!</h1>

        <md-button class="md-raised md-primary read--other" ui-sref="home.filter">
            Read other stuffs
        </md-button>
    </div>
</md-content>
<md-content class="blog--banner--content" ng-if='content && loaded'>
    <div class="container">
        <div layout="row" hide-xs ng-if='post.type==="tutorial"'>
            <div flex="100" class="back--hidden">
                <div class="blog--banner--advert">
                </div>
            </div>
        </div>
        <div layout="row">
            <div flex="100" class="back--hidden">
                <div class="blog--banner--header">
                    <h1>{{post.heading}}</h1>
                </div>
            </div>
        </div>

        <div layout="row" hide-xs ng-if='post.type==="tutorial"'>
            <div flex="30" class="back--hidden">
                <div class="blog--banner--writer md-whiteframe-8dp">
                    <div class="writer--img">
                        <img src="{{author.avatar}}" alt="">
                    </div>
                    <div class="writer--name">
                        {{author.name}}
                    </div>
                    <div class="writer--slug">
                        ( @{{author.username}} )
                    </div>
                    <ul>
                        <li><i class="fa fa-clock-o" aria-hidden="true"></i>July 09, 2017</li>
                        <li><i class="fa fa-eye" aria-hidden="true"></i>Views {{author.likes}}</li>
                        <li><i class="fa fa-book" aria-hidden="true"></i>Posts {{author.post_id.length}}</li>

                    </ul>
                </div>
            </div>
            <div flex="70" class="back--hidden banner--img">

                <div class="blog--banner--img md-whiteframe-4dp" style="border-radius:5px;">
                    <!--  <img src="{{post.banner}}" alt="" style="width:100%;height:100%;">
 -->
                    <cl-image public-id="{{post.banner_id}}">
                        <cl-transformation width="760" height="500" quality="90" crop="scale" fetch_format="auto">
                        </cl-transformation>
                    </cl-image>
                </div>
            </div>

        </div>
    </div>
    <div class="container-fluid svg--art--container" hide-xs ng-if='post.type==="tutorial"'>
        <div layout="row">
            <div flex class="back--hidden">
                <svg class="diagon-alley" viewBox="0 0 100 100" preserveAspectRatio="none">
                            <polygon fill="white" points="0,0 50,50 100,0 100,100 0,100"></polygon>
                            </svg>
            </div>
        </div>

    </div>
</md-content>
<md-content class="blog--article-content" ng-if="content">
    <div class="container-fluid ">
        <div layout="row">
            <div flex="20" flex-xs="0">

            </div>
            <div flex="60" flex-xs="100" class="article--container md-whiteframe-2dp" layout-align="top center" style="background:#fff;">
                <div class="article--engage--buttons">
                    <div layout="row" layout-align="center center">
                        <div class="engage-- engage--code">
                            <md-button class="md-raised md-default"><i class="fas fa-code"></i> CODE</md-button>
                        </div>
                        <div class="engage-- engage--touch">

                            <md-button class="md-fab md-default" aria-label="Eat cake" ng-click="clapPost()">
                                <i class="material-icons">touch_app</i>
                            </md-button>
                            {{post.claps}}
                        </div>
                        <div class="engage-- engage--view"><i class="fa fa-eye" aria-hidden="true"></i> {{post.views}}</div>
                    </div>
                </div>

                <p ng-bind-html="post.body"></p>

            </div>
            <div flex="20" flex-xs="0">

            </div>
        </div>
    </div>
    <div class="container-fluid author--content">
        <div class="author--image">
            <img src="{{author.avatar}}" alt="">
        </div>
        <div class="author--name">
            <h1>{{author.name}}</h1>
        </div>
        <div class="author--bio">
            <p> {{author.bio}}</p>
        </div>
        <div class="author--total--posts">
            <strong> {{author.posts}} </strong> post(s)
        </div>
        <div class="author--social--button">
            <em> Follow Me On</em>
            <br>
            <i class="fa fa-google"></i>
            <i class="fa fa-facebook"></i>
            <i class="fa fa-twitter"></i>
        </div>
    </div>
</md-content>
